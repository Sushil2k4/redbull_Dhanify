<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginBottom="16dp"/>

    <!-- TextView to display goals -->
    <TextView
        android:id="@+id/goals_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your goals will appear here"
        android:layout_marginBottom="16dp"/>

    <!-- Add New Goal Input and Button -->
    <EditText
        android:id="@+id/notes_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new goal"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Goal"/>

    <!-- Button to View Goals -->
    <Button
        android:id="@+id/view_goals_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Goals"/>
</LinearLayout>
